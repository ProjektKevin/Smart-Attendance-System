<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.smartattendance.controller.student.StudentAttendanceController"
      spacing="12"
      style="-fx-padding: 12;">

    <!-- FILTER BAR -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Course:"/>
        <ComboBox fx:id="courseCombo" prefWidth="150"/>

        <Label text="From:"/>
        <DatePicker fx:id="fromDate" prefWidth="140"/>

        <Label text="To:"/>
        <DatePicker fx:id="toDate" prefWidth="140"/>

        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Reset" onAction="#onResetFilters"/>
    </HBox>

    <!-- SUMMARY HEADER -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <!-- bumped from 13px to 15px -->
        <Label text="Summary by course"
               style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
    </HBox>

    <TableView fx:id="summaryTable" prefHeight="160" VBox.vgrow="NEVER">
        <columns>
            <TableColumn fx:id="colSummaryCourse" text="Course" prefWidth="140"/>
            <TableColumn fx:id="colSummaryAttended" text="Attended" prefWidth="80"/>
            <TableColumn fx:id="colSummaryTotal" text="Total" prefWidth="80"/>
            <TableColumn fx:id="colSummaryPercent" text="Percentage" prefWidth="220"/>
        </columns>
    </TableView>

    <!-- RECORDS HEADER + LEGEND + COUNT -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <!-- bumped header -->
        <Label text="Attendance records"
               style="-fx-font-size: 15px; -fx-font-weight: bold;"/>

        <Pane HBox.hgrow="ALWAYS"/>

        <!-- legend stays the same -->
        <HBox spacing="8" alignment="CENTER_RIGHT">
            <Label text="Legend:" style="-fx-font-size: 11px; -fx-text-fill: #555;"/>

            <HBox spacing="4" alignment="CENTER">
                <Region style="-fx-background-color: #d4edda; -fx-min-width: 14; -fx-min-height: 10; -fx-background-radius: 3;"/>
                <Label text="Present" style="-fx-font-size: 11px;"/>
            </HBox>

            <HBox spacing="4" alignment="CENTER">
                <Region style="-fx-background-color: #ffe4b5; -fx-min-width: 14; -fx-min-height: 10; -fx-background-radius: 3;"/>
                <Label text="Late" style="-fx-font-size: 11px;"/>
            </HBox>

            <HBox spacing="4" alignment="CENTER">
                <Region style="-fx-background-color: #f8d7da; -fx-min-width: 14; -fx-min-height: 10; -fx-background-radius: 3;"/>
                <Label text="Absent" style="-fx-font-size: 11px;"/>
            </HBox>

            <HBox spacing="4" alignment="CENTER">
                <Region style="-fx-background-color: #e2e3e5; -fx-min-width: 14; -fx-min-height: 10; -fx-background-radius: 3;"/>
                <Label text="Pending" style="-fx-font-size: 11px;"/>
            </HBox>
        </HBox>

        <!-- more obvious record count -->
        <Label fx:id="recordsLabel"
               text="0 records"
               style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 0 8;"/>
    </HBox>

    <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
            <TableColumn fx:id="colCourse" text="Course" prefWidth="120"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="110"/>
            <TableColumn fx:id="colMethod" text="Method" prefWidth="110"/>
            <TableColumn fx:id="colMarkedAt" text="Marked At" prefWidth="180"/>
        </columns>
    </TableView>

</VBox>
