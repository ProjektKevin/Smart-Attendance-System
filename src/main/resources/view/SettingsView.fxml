<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10" style="-fx-padding: 10;" fx:controller="com.smartattendance.controller.SettingsController">
    <children>
        <Label text="Camera Index" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="cameraIndexField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Recognition Threshold" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="thresholdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Late Threshold (min)" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="lateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Database Path" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="dbPathField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Button text="Save" onAction="#onSaveSettings" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </children>
</GridPane>
