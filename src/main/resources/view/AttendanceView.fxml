<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.smartattendance.controller.AttendanceController" spacing="10" style="-fx-padding: 10;">
    <Label fx:id="lblSessionTitle" text="Attendance for Session"/>
    
    <TableView fx:id="attendanceTable" prefWidth="700" prefHeight="400">
        <columns>
            <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="80"/>
            <TableColumn fx:id="colStudentName" text="Name" prefWidth="120"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            <TableColumn fx:id="colMethod" text="Method" prefWidth="80"/>
            <TableColumn fx:id="colNote" text="Note" prefWidth="150"/>
            <TableColumn fx:id="colMarkedAt" text="Marked At" prefWidth="150"/>
            <TableColumn fx:id="colLastSeen" text="Last Seen" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Save Changes" onAction="#onSaveChanges"/>
        <Button text="Back" onAction="#onBack"/>
    </HBox>
</VBox>
