<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:id="root"
            fx:controller="com.smartattendance.controller.RootController">
    <stylesheets>
        <URL value="@styles/styles.css"/>
    </stylesheets>

    <top>
        <ToolBar>
            <Label text="CS102-Project-Smart Attendance System - Manager view"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <!-- no graphic here; controller will add it -->
            <ToggleButton fx:id="themeToggle" text="Dark mode" onAction="#onThemeToggle"/>
        </ToolBar>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="tabDashboard" text="Dashboard"><content><fx:include source="DashboardView.fxml"/></content></Tab>
                <Tab fx:id="tabStudents"  text="Students"><content><fx:include source="StudentView.fxml"/></content></Tab>
                <Tab fx:id="tabSessions"  text="Sessions"><content><fx:include source="SessionView.fxml"/></content></Tab>
                <Tab fx:id="tabLive"      text="Live Recognition"><content><fx:include source="LiveView.fxml"/></content></Tab>
                <Tab fx:id="tabReports"   text="Reports"><content><fx:include source="ReportView.fxml"/></content></Tab>
                <Tab fx:id="tabSettings"  text="Settings"><content><fx:include source="SettingsView.fxml"/></content></Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
